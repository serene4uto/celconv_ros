<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find celconv_description)/urdf/celconv_roller.urdf.xacro"/>

  <xacro:macro name="celconv_rim"  params="name parent_name color xyz rpy">  
  	<link name="rim_${name}_${parent_name}_link">

  	  <inertial>
  	  	<origin xyz="0 0 -0.000343"/>
  	  	<mass value="0.00835758"/>
  	  	<inertia
  	  		ixx="6.63684e-07"
  	  		ixy="0"
  	  		ixz="0"
  	  		iyy="6.63684e-07"
  	  		iyz="0"
  	  		izz="9.40333e-07"/>  
  	  </inertial>

  	  <visual>
  	  	<geometry>  
  	  		<mesh filename="file://$(find celconv_description)/mesh/celconv_rim.stl"/>
  	  	</geometry>
  	  	<material name="rim_${name}_${parent_name}_material">
  	  		<color rgba="${color} 1"/>
  	  	</material>
  	  </visual>

  	  <collision>
  	  	<geometry>
  	  		<mesh filename="file://$(find celconv_description)/mesh/celconv_rim.stl"/>
  	  	</geometry>
  	  </collision>
  		
  	</link>  
  	<joint
  	  name="rim_${name}_to_${parent_name}_joint"
  	  type="continuous">  
  	  <parent link="${parent_name}_link" />
  	  <child link="rim_${name}_${parent_name}_link" />
  	  <axis xyz="0 0 1"/>
  	  <origin xyz="${xyz}" rpy="${rpy}"/>  
  	</joint>

  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="e"
  	  xyz="0.01355 0 0.0055"
  	  rpy="-1.570796326794896 0 0"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="ne"
  	  xyz="0.00958129689 0.00958129689 -0.0055"
  	  rpy="-1.570796326794896 0 0.7853981633974483"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="n"
  	  xyz="0 0.01355 0.0055"
  	  rpy="-1.570796326794896 0 1.570796326794896"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="nw"
  	  xyz="-0.00958129689 0.00958129689 -0.0055"
  	  rpy="-1.570796326794896 0 2.356194490192345"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="w"
  	  xyz="-0.01355 0 0.0055"
  	  rpy="-1.570796326794896 0 3.141592653589793"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="sw"
  	  xyz="-0.00958129689 -0.00958129689 -0.0055"
  	  rpy="-1.570796326794896 0 -2.356194490192345"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="s"
  	  xyz="0 -0.01355 0.0055"
  	  rpy="-1.570796326794896 0 -1.570796326794896"
  	/>
  	<xacro:celconv_roller
  	  parent_name="rim_${name}_${parent_name}"
  	  name="se"
  	  xyz="0.00958129689 -0.00958129689 -0.0055"
  	  rpy="-1.570796326794896 0 -0.7853981633974483"
  	/>

	<transmission name="rim_${name}_${parent_name}_transmission">
	  <type>transmission_interface/SimpleTransmission</type>
	  <joint name="rim_${name}_to_${parent_name}_joint">
	    <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	  </joint>
	  <actuator name="rim_${name}_${parent_name}_motor">
	    <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	    <mechanicalReduction>1</mechanicalReduction>
	  </actuator>
	</transmission>
	
  </xacro:macro>

</robot>
