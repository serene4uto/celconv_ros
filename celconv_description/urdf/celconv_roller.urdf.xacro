<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="celconv_roller" params="parent_name name xyz rpy">

  <link name="roller_${name}_${parent_name}_link">
  	<inertial>
  	  <mass value="0.00113845"/>
  	  <inertia
  	  	ixx="2.53776e-08"
  	  	ixy="0"
  	  	ixz="0"
  	  	iyy="2.53776e-08"
  	  	iyz="0"
  	  	izz="1.47666e-08"/>
  	</inertial>

  	<visual>
  	  <geometry>
  	  	<mesh filename="file://$(find celconv_description)/mesh/celconv_roller.stl"/>
  	  </geometry>
  	  <material name="roller_${name}_${parent_name}_material">
  	  	<color rgba="0.1 0.1 0.1 1"/>
  	  </material>
  	</visual>

  	<collision>
	  <surface>
	    <friction>
	      <ode>
	        <mu>1.0</mu>
	        <mu2>1.0</mu2>
	      </ode>
	    </friction>
	  </surface>
  	  <geometry>
  	  	<mesh filename="file://$(find celconv_description)/mesh/celconv_roller.stl"/>
  	  </geometry>
  	</collision>
  </link>
  
  <gazebo reference="roller_${name}_${parent_name}_link">
    <material>Gazebo/Black</material>
  </gazebo>
	<joint name="roller_${name}_to_${parent_name}_joint" type="continuous">
		<parent link="${parent_name}_link"/>
		<child link="roller_${name}_${parent_name}_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="${xyz}" rpy="${rpy}"/>
	</joint>
  </xacro:macro>

</robot>
