<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="small_box">

  <!-- Define the dimensions as Xacro properties -->
  <xacro:property name="height" value="0.12"/>
  <xacro:property name="width" value="0.10392"/>
  <xacro:property name="depth" value="0.05"/> <!-- Assuming depth is the same as width for simplicity -->

  <!-- Link for the box -->
  <link name="box_link">
    <visual>
      <geometry>
        <box size="${width} ${height} ${depth}"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/> <!-- RGBA for green color, fully opaque -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="${width} ${height} ${depth}"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.3</mu>  <!-- Typical friction coefficient for cardboard -->
            <mu2>0.3</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="0.0005"/> <!-- Assuming some mass for the box -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <gazebo reference="box_link">
    <material>Gazebo/Orange</material>
  </gazebo>
</robot>
